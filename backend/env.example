# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tasklist

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
